<%- include('../partials/header/header_css.ejs'); %>

<body>
    <%- include('../partials/spinner/spinner.ejs'); %>
    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            <%- include('../partials/nav/nav_student.ejs') %>

            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    <%- include('../partials/nav/sidebar_student.ejs') %>
                    <div class="pcoded-content">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12 text-center">
                                        <div class="page-header-title">
                                            <h3 class="m-b-10"><%= title %></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Page-header end -->
                        <div class="pcoded-inner-content">
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <h3 class="m-b-40 m-t-20">Courses</h3>
                                                <div class="row">
                                                    <% courses.forEach(course => { %>
                                                        <div class="col-12 col-sm-3 col-md-3 col-lg-4 col-xl-4">
                                                        <div class="card">
                                                            <div class="card-header">
                                                                <h5> <%= course.name %> </h5>
                                                            </div>
                                                            <div class="card-block">
                                                                <p>
                                                                    <%= course.description %>
                                                                </p>
                                                            </div>
                                                            <form action="/course/enroll" method="post">
                                                                <input type="hidden" name="courseId" value="<%= course._id %>">
                                                                <div class="card-footer">
                                                                    <button type="submit" class="btn btn-primary">Enroll Now</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                    <% }); %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="styleSelector"></div>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/footer/footer_js.ejs'); %>