<%- include('../partials/header/header_css.ejs'); %>

<body>
    <%- include('../partials/spinner/spinner.ejs'); %>
    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            <%- include('../partials/nav/nav_admin.ejs') %>

            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    <%- include('../partials/nav/sidebar_admin.ejs') %>
                    <div class="pcoded-content">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12 text-center">
                                        <div class="page-header-title">
                                            <h3 class="m-b-10"><%= title %></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Page-header end -->
                        <div class="pcoded-inner-content">
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        <div class="row">
                                            <div class="col-sm-12 ">
                                                <div class="card">
                                                    <div class="card-header text-center">
                                                        <h3 class="mt-3 mb-3">Update Course</h3>
                                                    </div>
                                                    <form action="/admin/course/add" method="post">
                                                        <div class="card-block">
                                                            <div class="row mt-4 justify-content-center d-flex align-items-center">
                                                                <div class="col-sm-6">
                                                                    <div class="form-group">
                                                                        <label class="form-label" for="name">Name</label>
                                                                        <input type="text" class="form-control" name="name" id="name" value="<%= course.name %>" required/>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="form-label" for="category">Category</label>
                                                                        <select name="category" id="category" class="form-control border" required>
                                                                            <option value="" selected hidden>Select Option</option>
                                                                            <option value="DPIT" <%= course.category === 'DPIT' ? 'selected' : '' %>>DPIT</option>
                                                                            <option value="DPWT" <%= course.category === 'DPWT' ? 'selected' : '' %>>DPWT</option>
                                                                            <option value="DPFT" <%= course.category === 'DPFT' ? 'selected' : '' %>>DPFT</option>
                                                                            <option value="DPET" <%= course.category === 'DPET' ? 'selected' : '' %>>DPET</option>
                                                                            <option value="DPTHT" <%= course.category === 'DPTHT' ? 'selected' : '' %>>DPTHT</option>
                                                                        </select>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label class="form-label" for="description">Description</label>
                                                                        <textarea name="description" id="description" cols="30" rows="5" class="form-control"><%= course.description %></textarea>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer text-center">
                                                            <button type="submit" name="actions" value="" class="btn btn-primary">Submit</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="styleSelector"></div>
                </div>
            </div>
        </div>
    </div>
    <script>
        // Disable right-click menu
        window.addEventListener('contextmenu', function (e) {
            e.preventDefault();
        });
    </script>
</body>
<%- include('../partials/footer/footer_js.ejs'); %>