<%- include('../partials/header/header_css.ejs'); %>

<body>
    <%- include('../partials/spinner/spinner.ejs'); %>
    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            <%- include('../partials/nav/nav_admin.ejs') %>

            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    <%- include('../partials/nav/sidebar_admin.ejs') %>
                    <div class="pcoded-content">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12 text-center">
                                        <div class="page-header-title">
                                            <h3 class="m-b-10"><%= title %></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Page-header end -->
                        <div class="pcoded-inner-content">
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5>Subjects List</h5>
                                                    </div>
                                                    <div class="card-block table-border-style">
                                                        <div class="table-responsive">
                                                            <table class="table table-bordered">
                                                                <thead>
                                                                    <tr class="text-center" style="white-space: nowrap;">
                                                                        <th>Subject Code</th>
                                                                        <th>Name</th>
                                                                        <th>Unit</th>
                                                                        <th>Category</th>
                                                                        <th>Year</th>
                                                                        <th>Semester</th>
                                                                        <th>Section</th>
                                                                        <th>Description</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% subjects.forEach(subject => { %>
                                                                    <form action="" method="post">
                                                                        <tr class="text-center">
                                                                            <td class="align-middle text-capitalize" style="white-space: nowrap;"> <%= subject.subjectCode %></td>
                                                                            <td class="align-middle text-capitalize" style="white-space: nowrap;"> <%= subject.name %></td>
                                                                            <td class="align-middle text-capitalize" style="white-space: nowrap;"> <%= subject.unit %></td>
                                                                            <td class="align-middle text-capitalize" style="white-space: nowrap;"> <%= subject.category %></td>
                                                                            <td class="align-middle text-capitalize" style="white-space: nowrap;"> <%= subject.year %></td>
                                                                            <td class="align-middle text-capitalize" style="white-space: nowrap;"> <%= subject.semester %></td>
                                                                            <td class="align-middle text-capitalize" style="white-space: nowrap;"><%= subject.section %></td>
                                                                            <td class="align-middle text-capitalize" style="width: 30%;"> <%= subject.description %></td>
                                                                            <input type="hidden" name="subjectId" id="subjectId" value="<%= subject._id %>">
                                                                        </tr>
                                                                    </form>
                                                                    <% }) %>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="styleSelector"></div>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/footer/footer_js.ejs'); %>