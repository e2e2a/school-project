<%- include('../partials/header/header_css.ejs'); %>

<body>
    <%- include('../partials/spinner/spinner.ejs'); %>
    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            <%- include('../partials/nav/nav_admin.ejs') %>

            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    <%- include('../partials/nav/sidebar_admin.ejs') %>
                    <div class="pcoded-content">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12 text-center">
                                        <div class="page-header-title">
                                            <h3 class="m-b-10"><%= title %></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Page-header end -->
                        <div class="pcoded-inner-content">
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <h5>Students Enrolled</h5>
                                                        <div class="card-header-right">
                                                            <ul class="list-unstyled card-option">
                                                                <li><i class="fa fa fa-wrench open-card-option"></i></li>
                                                                <li><i class="fa fa-window-maximize full-card"></i></li>
                                                                <li><i class="fa fa-minus minimize-card"></i></li>
                                                                <li><i class="fa fa-refresh reload-card"></i></li>
                                                                <li><i class="fa fa-trash close-card"></i></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="card-block table-border-style">
                                                        <div class="table-responsive">
                                                            <table class="table">
                                                                <thead>
                                                                    <tr class="text-center">
                                                                        <th>Fullname</th>
                                                                        <th>Course</th>
                                                                        <th>Year</th>
                                                                        <th>Semester</th>
                                                                        <th>Section</th>
                                                                        <th>Actions</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% schedules.forEach(schedule => { %>
                                                                        <form action="/admin/enrollment/enrolled/cancel" method="post">
                                                                            <tr style="white-space: nowrap;">
                                                                                <td class="align-middle text-capitalize"><%= schedule.studentId.lastname %>, <%= schedule.studentId.firstname %> <%= schedule.studentId.middlename %></td>
                                                                                <td class="align-middle"><%= schedule.courseId.name %></td>
                                                                                <td class="align-middle text-capitalize"><%= schedule.sectionId.year %></td>
                                                                                <td class="align-middle text-capitalize"><%= schedule.sectionId.semester %></td>
                                                                                <td class="align-middle text-capitalize"><%= schedule.sectionId.section %></td>
                                                                                <input type="hidden" name="studentClassId" id="studentClassId" value="<%= schedule._id %>">
                                                                                <input type="hidden" name="studentId" id="studentId" value="<%= schedule.studentId._id %>">
                                                                                <td class="text-center align-middle">
                                                                                    <div class="btn-group d-flex">
                                                                                        <a href="/admin/enrollment/student/schedule/<%= schedule._id %>" value="approved" class="btn btn-sm btn-primary"><i class="ti-eye"></i> View Subjects</a>
                                                                                        <button type="submit" name="actions" value="declined" class="btn btn-sm btn-danger"><i class="ti-close"></i> Cancel Enrolled</button>
                                                                                    </div>
                                                                                </td>
                                                                            </tr>
                                                                        </form>
                                                                    <% }) %>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="styleSelector"></div>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/footer/footer_js.ejs'); %>