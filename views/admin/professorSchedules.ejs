<%- include('../partials/header/header_css.ejs'); %>

<body>
    <%- include('../partials/spinner/spinner.ejs'); %>
    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            <%- include('../partials/nav/nav_admin.ejs') %>
            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    <%- include('../partials/nav/sidebar_admin.ejs') %>
                    <div class="pcoded-content">
                        <!-- Page-header start -->
                        <div class="page-header">
                            <div class="page-block">
                                <div class="row align-items-center">
                                    <div class="col-md-12 text-center">
                                        <div class="page-header-title">
                                            <h3 class="m-b-10"><%= title %></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Page-header end -->
                        <div class="pcoded-inner-content">
                            <div class="main-body">
                                <div class="page-wrapper">
                                    <div class="page-body">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="card">
                                                    <div class="card-header">
                                                        <div class="row">
                                                            <div class="col-6 align-middle">
                                                                <h5>Note: <code>This can only be press once all sections is ended.</code></h5>
                                                            </div>
                                                            <div class="col-6">
                                                                <div class="justify-content-end align-items-center d-flex">
                                                                    <button type="submit" class="btn btn-sm btn-warning">Remark Schedules</button>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <% if(schedules.length > 0) { %>
                                                    <div class="card">
                                                        <div class="card-header">
                                                            <h5>Professor's Schedules</h5>
                                                        </div>
                                                        <div class="card-block table-border-style">
                                                            <div class="table-responsive">
                                                                <table class="table table-bordered">
                                                                    <thead>
                                                                        <tr>
                                                                            <th class="text-center">Fullname</th>
                                                                            
                                                                            <th class="text-center">Actions</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody> 
                                                                        <% schedules.forEach(schedule => { %>
                                                                            <tr style="white-space: nowrap;">
                                                                                <td class="align-middle text-capitalize text-center"><%= schedule.professorId.lastname %>, <%= schedule.professorId.firstname %> <%= schedule.professorId.middlename %></td>
                                                                                <td class="align-middle text-capitalize text-center">
                                                                                    <div class="d-flex justify-content-center align-items-center btn-group">
                                                                                        <a href="/admin/professor/schedule/<%= schedule._id %>" class="btn btn-sm btn-primary"><i class="ti-eye"></i>View Schedule</a>
                                                                                        <a href="/admin/professor/classes/<%= schedule._id %>" class="btn btn-sm btn-secondary"><i class="ti-eye"></i>View Classes</a>
                                                                                        <a href="/admin/professor/classes/<%= schedule._id %>" class="btn btn-sm btn-info"><i class="ti-eye"></i>View Old Schedules</a>
                                                                                    </div>
                                                                                </td>
                                                                            </tr>
                                                                        <% }) %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                <% } else { %>
                                                    <div class="card">
                                                        <div class="card-header">
                                                            <h5>No Schedule Found.</h5>
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="styleSelector"></div>
                </div>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/footer/footer_js.ejs'); %>